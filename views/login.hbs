    <div class="container login-container">
      <form method="POST" action="/login" id="login-form">
        <div class="my-1">
          <label for="login-input-email" class="form-label">Email</label>
          <input name="email" type="email" class="form-control form-control-sm" id="login-input-email" value="test@test.com" />
        </div>
        <div class="my-1">
          <label for="login-input-password" class="form-label">Password</label>
          <input name="password" type="password" class="form-control form-control-sm" id="login-input-password" value="password" />
        </div>
        {{#if message}}
          <div class="alert {{messageClass}}" role="alert">
            {{message}}
          </div>
        {{/if}}
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
